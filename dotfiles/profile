export PATH="/usr/local/bin:$PATH"

source ~/.git-completion.bash

HISTSIZE=100000

set -o vi

alias ls='ls -G'
alias g=git
alias gsb="git status && echo ---- && git branch"
alias m="neomutt"
alias e="emacs -nw"
alias wo="~/dotfiles/bin/workspace-open.sh"
alias conf='vi $( git diff --name-only --diff-filter=U | xargs )'
alias emacs='emacs -nw'
alias sb='swift build'
alias st='swift test'
alias be='bundle exec'
alias vi='nvim'

ldg() {
    point=/Volumes/ledger
    hdiutil mount CloudStation/Crypted/ledger.dmg -mountpoint $point
    vi "+normal G" $point/dvor.ldg
    hdiutil unmount $point
}

if [ -f `brew --prefix`/etc/bash_completion ]; then
    . `brew --prefix`/etc/bash_completion
fi

# autocompletion for g alias
complete -o default -o nospace -F _git g

# No history for jrnl
HISTIGNORE="jrnl *"

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
